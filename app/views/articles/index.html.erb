<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <% @articles.each do |article| %>
          <article>
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= truncate(article.content, length: 150) %></p>
          </article>
        <% end %>
    </div>
  </div>
</div>